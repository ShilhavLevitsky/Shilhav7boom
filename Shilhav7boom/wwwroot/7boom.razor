@page "/7Boom"

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f8ff;
        text-align: center;
        padding: 20px;
    }

    .boom {
        color: red;
        font-weight: bold;
        font-size: 24px;
    }

    .number {
        color: blue;
        font-size: 20px;
    }

    img {
        width: 100%;
        max-width: 300px;
        margin-top: 20px;
    }

    .output {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .item {
        width: 30%;
        margin: 5px;
    }


    }
</style>

<h1>Welcome to 7Boom Game!</h1>
<img src="7boom.png" alt="7Boom Game Image" />

<div class="output">
    @for (int i = 1; i <= 100; i++)
    {
        if (i.ToString().Contains("7") || i % 7 == 0)
        {
            <div class="item"><span class="boom">Boom</span></div>
        }
        else
        {
            <div class="item"><span class="number">@i</span></div>
        }


    }
</div>


